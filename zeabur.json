{
  "name": "Komari Monitor",
  "description": "Deploy Komari Dashboard (1.1.3) on Zeabur.",
  "services": [
    {
      "name": "komari",
      "type": "docker",
      "dockerfile": "Dockerfile",
      "volumes": [
        {
          "name": "komari-data",
          "mountPath": "/app/data"
        }
      ],
      "ports": [
        {
          "type": "HTTP",
          "port": 25774
        }
      ]
    }
  ]
}
